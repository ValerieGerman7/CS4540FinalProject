@model CS4540PS2.Models.CourseInstance

@{
    ViewData["Title"] = "Delete Course";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Department @Model.Number  - @Model.Name</h4>
    <hr />
    <p><i>@Model.Semester @Model.Year</i></p>
    <p><b>Description: </b> @Model.Description</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CourseInstanceId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <br />
    <a asp-action="Index">Back to All Courses</a>
</div>
