@{
    ViewData["Title"] = "Create Department";
}
<h2>Create Department</h2>
<hr />
<form action="/DeptManager/Create" method="post">
    <div class="form-group">
        <label class="control-label">Department Code</label>
        <input type="text" max="5" min="1" required name="code" />
    </div>
    <div class="form-group">
        <label class="control-label">Department Name</label>
        <input type="text" min="1" required name="name" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
<br />
<br />
<a asp-controller="DeptManager" asp-action="Index">
    <button class="primary">Back To All Departments</button>
</a>