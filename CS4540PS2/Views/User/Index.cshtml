@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">User Name</th>
            <th scope="col">Email</th>
            <th scope="col">Email Confirmed</th>
            <th scope="col">Roles</th>
            <th scope="col">Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IdentityUser user in UserManager.Users.OrderBy(u => u.UserName)) {
            <tr>
                <th scope="row">@user.UserName</th>
                <td>@user.Email</td>
                <td>@user.EmailConfirmed</td>
                @{ 
                    string roles = "";
                    foreach(string role in UserManager.GetRolesAsync(user).Result) {
                        roles += role + " ";
                    }
                    if (roles.Equals("")) { roles = "None"; }
                }
                <td>@roles</td>
                <td>
                    <form action="User/AddRole" method="post" onsubmit="AddUserToRole(event, '@user.UserName');">
                        <input type="submit" value="Submit" />
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
<p id="resultP">

</p>

