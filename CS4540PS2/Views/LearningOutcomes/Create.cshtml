@{
    ViewData["Title"] = "Create";
    List<CourseInstance> instances = (List<CourseInstance>) ViewData["CourseInstances"];
}

<h1>Create</h1>

<h4>LearningOutcomes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseInstanceId" class="control-label">Course</label>
                <select asp-for="CourseInstanceId" class="form-control">
                    <option disabled selected>Select a course</option>
                @foreach(CourseInstance inst in instances) {
                    <option name="CourseInstanceId" value="@inst.CourseInstanceId">@inst.Department @inst.Number @inst.Name (@inst.Semester @inst.Year)</option>
                }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />
<div>
    <a asp-action="Index"><button class="btn btn-sm btn-light">Back To All Learning Outcomes</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
